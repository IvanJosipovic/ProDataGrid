<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:DataGridSample.ViewModels"
             x:Class="DataGridSample.Pages.ToggleButtonColumnDefinitionBindingsPage"
             x:DataType="viewModels:ToggleButtonColumnDefinitionBindingsViewModel">
<Grid RowDefinitions="Auto,Auto,*" RowSpacing="10" Margin="12">
    <StackPanel Spacing="4">
      <TextBlock Classes="h2">ToggleButton Column Definition Bindings</TextBlock>
      <TextBlock Text="Validates row bindings for DataGridToggleButtonColumnDefinition. One column binds Content, another binds CheckedContent and UncheckedContent."
                 TextWrapping="Wrap" />
    </StackPanel>

    <TextBlock Grid.Row="1"
               Text="{Binding LastToggleMessage}"
               Foreground="Gray"
               FontStyle="Italic"
               TextWrapping="Wrap" />

    <DataGrid Grid.Row="2"
              ItemsSource="{Binding Items}"
              ColumnDefinitionsSource="{Binding ColumnDefinitions}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False" />
  </Grid>
</UserControl>
